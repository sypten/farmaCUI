---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Iniciar Sesión - FarmaCUI">
  <div class="flex items-center justify-center min-h-screen bg-white">
    <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-md">
      <h1 class="text-2xl font-bold text-center mb-6 text-farma-text">Bienvenido de nuevo</h1>
      
      <form id="login-form" class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-farma-text">Email</label>
          <input type="email" name="email" required class="w-full p-2 border rounded mt-1" />
        </div>
        
        <div>
          <label class="block text-sm font-medium text-farma-text">Contraseña</label>
          <input type="password" name="password" required class="w-full p-2 border rounded mt-1" />
        </div>

        <button type="submit" class="w-full bg-farma-primary text-white py-2 rounded hover:bg-farma-secondary font-bold">
          Ingresar
        </button>
      </form>

      <p class="mt-4 text-center text-sm text-farma-gray">
        ¿Nuevo aquí? <a href="/registro" class="text-farma-primary hover:underline">Crea una cuenta</a>
      </p>
      
      <div id="message" class="mt-4 text-center text-sm hidden text-farma-error"></div>
    </div>
  </div>
</Layout>

<script>
  import { supabase } from '../lib/supabase';

  const form = document.getElementById('login-form');
  const msg = document.getElementById('message');

  if (form instanceof HTMLFormElement) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const formData = new FormData(form);
      
      // 1. Iniciar Sesión
      const { data, error } = await supabase.auth.signInWithPassword({
        email: formData.get('email') as string,
        password: formData.get('password') as string,
      });

      if (error) {
        if (msg) {
            msg.classList.remove('hidden');
            msg.textContent = "Credenciales inválidas.";
        }
      } else {
        // 2. LOGIN EXITOSO -> ¿A dónde lo mandamos?
        
        // Consultamos si es staff
        const { data: staff } = await supabase
          .from('usuarios_sistema')
          .select('rol')
          .eq('id', data.user.id)
          .single();

        if (staff) {
            // ES ADMIN -> Al panel
            window.location.href = "/admin";
        } else {
            // ES CLIENTE -> A la home
            window.location.href = "/";
        }
      }
    });
  }
</script>